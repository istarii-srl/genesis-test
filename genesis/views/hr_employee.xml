<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="previsional_action_from_employee" model="ir.actions.act_window">
        <field name="name">Timesheets prévisionnelles</field>
        <field name="res_model">genesis.provisional.line</field>
        <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="context">{
            'search_default_month':1,
            'search_default_employee_id': [active_id],
            'default_employee_id': active_id
        }</field>
    </record>

    <record id="genesis_previsional_grid" model="ir.ui.view">
        <field name="name">genesis.previsional.grid</field>
        <field name="model">genesis.provisional.line</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="timesheet_grid.timesheet_view_grid_by_project_no_section"/>
        <field name="arch" type="xml">
            <xpath expr="/grid" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="genesis_previsional_list" model="ir.ui.view">
        <field name="name">genesis.previsional.list</field>
        <field name="model">genesis.provisional.line</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="previsional_action_view_from_employee_grid" model="ir.actions.act_window.view">
        <field name="sequence" eval="5"/>
        <field name="view_mode">grid</field>
        <field name="view_id" ref="timesheet_grid.timesheet_view_grid_by_project_no_section"/>
        <field name="act_window_id" ref="previsional_action_from_employee"/>
    </record>

    <record id="previsional_action_view_from_employee_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="genesis_previsional_list"/>
        <field name="act_window_id" ref="previsional_action_from_employee"/>
    </record>

    <record id="genenesis_hr_employee_view_form_inherit_timesheet" model="ir.ui.view">
        <field name="name">genesis.hr.employee.form.timesheet</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_time_off_dashboard'][2]" position="after">
                <button class="oe_stat_button" type="action" name="%(previsional_action_from_employee)d" icon="fa-calendar-check-o" groups="hr_timesheet.group_hr_timesheet_user">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Prévisionnel</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>