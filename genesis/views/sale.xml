<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="genesis_view_order_form" model="ir.ui.view">
        <field name="name">sale.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']/tree/field[@name='name']" position="after">

                <field name="employee_ids" widget="many2many_tags" optional="show" options="{'no_create': True}" />
            </xpath>
        </field>
    </record>

</odoo>
